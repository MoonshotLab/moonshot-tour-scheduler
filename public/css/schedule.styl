body
  background-color #222222

.container
  background-color white
  padding-bottom 50px


.page-header
  margin-top 10px

h3.availability
  margin-top 0


.date-controller
  margin-bottom 20px
  .btn
    width 100%
  .calendar-month-container
    border-top 1px solid rgba(0,0,0,.1)
    border-bottom 1px solid rgba(0,0,0,.1)


#calendar
  margin-bottom 30px
  .cal-year-box [class*="span"], .cal-month-box [class*="cal-cell"], .cal-month-day
    min-height 50px
    height 50px
  .cal-month-day
    display table
  .cal-month-box .cal-day-today span[data-cal-date]
    font-size 1em
  .cal-day-today
    background-color black
  .cal-day-today span[data-cal-date]
    opacity 1
    color white
  .cal-day-selected
    background-color #7e3f9d
    span[data-cal-date]
      opacity 1
      color white
  span[data-cal-date]
    margin 0
    display table-cell
    text-align center
    vertical-align middle
  #cal-week-box
    display none !important


table.time-table
  position relative
  margin-bottom 50px

  thead
    background-color rgba(0,0,0,.02)
    th
      border-bottom none
      height 55px
      white-space nowrap
    h4
      text-align center
      margin-top 0
      margin-bottom 0


  tbody
    tr
      cursor pointer

      // Hide the minute times
      &:nth-child(odd)
        td
          border-top-style dashed
        td:first-child
          border none
          p
            display none

      // Allow booking of up to 6:30, but hide the row
      &:last-child, &:nth-last-child(-n+2)
        display none

      &.selector
        transition .25s ease-out top
        top 55px
        position absolute
        width 100%
        cursor pointer
        td
          padding-top 0
          padding-bottom 0
        td:first-child
          background-color transparent
          p
            display block
        td:last-child
          width 100%
          transition .25s ease-out height
          border 1px dotted #9954bb
          background-color rgba(153,84,187,.5)

      .time-chooser
        float right
        font-size .8em
        height 100%
        margin-right -5px
        .time
          float left
          padding-right 25px
          color #713A8C
        .choice
          overflow hidden
          position relative
          height 50%
          &:first-child
            .indicator
              border-top none
          &:last-child
            .indicator
              line-height 150%
        .indicator
          right 0
          position absolute
          width 22px
          height 100%
          border 1px solid rgba(153,84,187,.6)
          border-bottom none
          border-right none
          background-color rgba(153,84,187,.3)
          text-align center
          color white
          font-size 2em
          font-weight bold
          line-height 75%

    td
      border-color rgba(0,0,0,.02)
      height 40px
      padding 4px
      background-color white
      transition .1s linear background-color
      &.busy
        background-color #ff0039
      &.past
        background-color rgba(0,0,0,.07)
      p
        width 37px
        text-align center
        margin 0
        font-size .5em
        color black
        font-size 1em
        color rgba(0,0,0,.5)
        span.hour
          display inline
        span.minute
          padding-top 0px


// Adding additional invitees
.friend-selector
  .add-friends
    margin-bottom 0
  .errors
    display none
  ul.friends
    li:first-child
      border-top none
    a.badge
      background-color #ff0039
      padding-bottom 5px


#form-errors
  display none


#confirm-modal
  .alert
    display none
  ul
    padding-left 0
  li
    list-style-type none
    margin-bottom 5px
    label
      font-weight normal
  ul.contents
    margin-left 150px
    margin-top -20px
    li
      margin-bottom 10px
  .subtitle
    margin -18px 0 10px 150px
    float left

  .title
    font-weight bold
    display inline-block
    min-width 150px
  .no-late
    margin-left 145px
    margin-top 30px
    margin-bottom 0
    label
      font-weight bold
