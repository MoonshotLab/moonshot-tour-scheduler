body
  background-color #222222

.container
  background-color white
  padding-bottom 50px


.page-header
  margin-top 10px

h3.availability
  margin-top 0


#calendar
  margin-bottom 30px
  .cal-year-box [class*="span"], .cal-month-box [class*="cal-cell"], .cal-month-day
    min-height 50px
    height 50px
  .cal-month-day
    display table
  .cal-month-box .cal-day-today span[data-cal-date]
    font-size 1em
  .cal-day-today
    background-color black
  .cal-day-today span[data-cal-date]
    opacity 1
    color white
  .cal-day-selected
    background-color #7e3f9d
    span[data-cal-date]
      opacity 1
      color white
  span[data-cal-date]
    margin 0
    display table-cell
    text-align center
    vertical-align middle
  #cal-week-box
    display none !important


table.time-table
  // hide until we're ready to load
  display none

  margin-bottom 50px

  thead
    background-color rgba(0,0,0,.02)
    th
      border-bottom none
    h4
      text-align center
      margin-top 0
      margin-bottom 0

  tbody
    // Selecting table rows, keep the time block unselected
    tr
      -webkit-user-select none
      -moz-user-select none
      &.selected
        td
          background-color #9954bb
        td:first-child
          background-color white

    // Make table elements selectable, animate
    td
      transition .1s linear background-color
      cursor pointer
      &.busy
        background-color #ff0039
      &.past
        background-color rgba(0,0,0,.07)

    //
    td
      border-color rgba(0,0,0,.02)
      height 35px
      padding 4px
      background-color white
      p
        width 37px
        text-align center
        margin 0
        font-size .5em
        color black
        font-size 1em
        color rgba(0,0,0,.5)
        span.hour
          display inline
        span.minute
          padding-top 0px

    // Hide the minute times
    tr:nth-child(even)
      td
        border-top-style dashed
      td:first-child
        border none
        p
          display none


// Adding additional invitees
.friend-selector
  .add-friends
    margin-bottom 0
  .errors
    display none
  ul.friends
    li:first-child
      border-top none
    a.badge
      background-color #ff0039
      padding-bottom 5px


#form-errors
  display none


#confirm-modal
  .alert
    display none
  ul
    padding-left 0
  li
    list-style-type none
    margin-bottom 5px
  ul.contents
    margin-left 150px
    margin-top -20px
    li
      margin-bottom 0px
  .title
    font-weight bold
    display inline-block
    min-width 150px
  .checkbox
    margin-left 145px
    margin-top 30px
    margin-bottom 0
    label
      font-weight bold
