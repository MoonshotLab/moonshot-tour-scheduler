body
  background-color #222222

.container
  background-color white
  padding-bottom 50px


.text-description
  margin-bottom 15px


.date-controller
  text-align center
  margin-top 20px
  .col
    background-color #222222
  .btn-link
    background-color rgba(0,0,0,.02)
    &:hover
      text-decoration none


table.time-table
  // hide until we're ready to load
  display none

  margin-bottom 50px

  thead
    background-color rgba(0,0,0,.02)
    th
      border-bottom none
    h4
      text-align center
      margin-top 0
      margin-bottom 0

  tbody
    // Selecting table rows, keep the time block unselected
    tr
      -webkit-user-select none
      -moz-user-select none
      &.selected
        td
          background-color #9954bb
        td:first-child
          background-color white

    // Make table elements selectable, animate
    td
      transition .1s linear background-color
      cursor pointer
      &.busy
        background-color #ff0039
      &.past
        background-color rgba(0,0,0,.07)

    //
    td
      border-color rgba(0,0,0,.02)
      height 30px
      padding 4px
      background-color white
      p
        width 37px
        text-align center
        margin 0
        font-size .5em
        color black
        font-size 1em
        color rgba(0,0,0,.5)
        span.hour
          display inline
        span.minute
          padding-top 0px

    // Hide the minute times
    tr:nth-child(even)
      td
        border-top-style dashed
      td:first-child
        border none
        p
          display none


// Adding additional invitees
.friend-selector
  .add-friends
    margin-bottom 0
  .errors
    display none
  ul.friends
    li:first-child
      border-top none
    a.badge
      background-color #ff0039
      padding-bottom 5px


#form-errors
  display none


#confirm-modal
  .alert
    display none
  ul
    padding-left 0
  li
    list-style-type none
    margin-bottom 5px
  ul.contents
    margin-left 150px
    margin-top -20px
    li
      margin-bottom 0px
  .title
    font-weight bold
    display inline-block
    min-width 150px
  .checkbox
    margin-left 145px
    margin-top 30px
    margin-bottom 0
    label
      font-weight bold
